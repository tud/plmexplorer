<script type="text/javascript">
	$(function() {
		$('#wNavigation').accordion({
			fillSpace: true
		,	navigation: true
		,	header: "h3"
		});
		$('#wNavigation').accordion("activate", 0);

		$('#dialog_about').dialog({
			modal: true,
			autoOpen: false,
			bgiframe: true,
			overlay: {
				opacity: 0.5,
				background: "#1c94c4"
			}
		});
	});

	$('#about').click(function() {
		$('#dialog_about').dialog("open");
		return false;
	});

</script>
