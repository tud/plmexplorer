<!doctype html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta name="description"	content="PlmExplorer,PLM Explorer,PLM,PDM,PLM viewer,Sherpa viewer,Sherpa" />
		<meta name="keywords"		content="PlmExplorer,PLM Explorer,PLM,PDM,PLM viewer,Sherpa viewer,Sherpa,Ruby on Rails,jQuery,jqGrid,UI jQuery" />
		<meta name="Copyright"		content="Copyright (c) 2009 Tud &amp; Taurus" />
		<meta name="author"			content="Tud &amp; Taurus" />
		<meta name="publisher"		content="Tud &amp; Taurus" />
		
		<title>PlmExplorer</title>
		
		<link rel="shortcut icon" href="/images/favicon.ico" />
		<link rel="icon" href="/images/favicon.ico" type="image/x-icon" />

		<%= stylesheet_link_tag 'blueprint/screen.css', :media => "screen, projection" %>
		<%= stylesheet_link_tag 'blueprint/print.css', :media => "print" %>
		<!--[if IE]><%= stylesheet_link_tag 'blueprint/ie.css', :media => "screen, projection" %><![endif]-->

		<%= stylesheet_link_tag 'themes/default/ui.all.css', 'uni-form.css' %>
		<!--[if IE]><%= stylesheet_link_tag 'uni-form.ie.css', :media => "screen, projection" %><![endif]-->
		<%= stylesheet_link_tag '../javascripts/themes/basic/grid.css','../javascripts/themes/jqModal.css','grid_custom.css' %>
		<%= stylesheet_link_tag 'plmexplorer.css' %>
		
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag 'uni-form.jquery.js' %>
		<%= javascript_include_tag 'jquery.layout.min.js','jquery.pngFix.pack.js', 'jquery.form.js' %>
		<%= javascript_include_tag 'jquery.history.js','jquery.history.custom.js','jquery.jec.min-0.5.2.js' %>
		<%= javascript_include_tag 'jquery.jqGrid.js','js/jqModal.js','js/jqDnR.js' %>
		<%= javascript_include_tag 'plmexplorer.js' %>
	</head>
	<body>
		<div class="ui-layout-north">
			<img src="/images/logo_trans.png" alt="logo"/>
		</div>

		<div class="ui-layout-west">
			<%= render :partial => 'layouts/navigation' %>
		</div>

		<div class="ui-layout-center">
			<%= render :partial => 'layouts/content' %>
		</div>

		<div class="ui-layout-south">
			<%= render :partial => 'layouts/footer' %>
		</div>
	</body>
</html>