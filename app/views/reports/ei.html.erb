<%= render :partial => 'title' %>

<% form_for :brecord, :html => {:id => controller.action_name, :class => 'uniForm'} do |f| %>
	<fieldset class='inlineLabels'>
		<legend id="legend_report_record"></legend>
		<%= f.hidden_field :report_rec_brectype, :value => @rectype %>
		<div class='ctrlHolder'>
			<label for="brecord_report_rec_name">Number :</label>
			<%= f.text_field :report_rec_name, :maxlength => "26", :tabindex => "1", :class => "uppercase" %>
		</div>
		<div class='ctrlHolder'>
			<label for="brecord_report_rec_bname1">Cage Code :</label>
			<select id="brecord_report_rec_bname1" name="brecord[report_rec_bname1]" tabindex="2">
				<option value="" />
				<%= option_groups_from_collection_for_select(CAGE_CODES, :options, :label, :value, :key) %>
			</select>
		</div>

		<%= render :partial => 'output', :locals => {:f => f} %>
	</fieldset>
<% end %>

<script type="text/javascript">
	$('form.uniForm').uniform();
</script>
