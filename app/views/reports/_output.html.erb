<hr/>
<div class='ctrlHolder'>
	<label for="brecord_report_print_queue">Print Queue :</label>
	<select id="brecord_report_print_queue" name="brecord[report_print_queue]" tabindex="21">
		<option value="" />
		<%= option_groups_from_collection_for_select(PRINTERS, :options, :label, :value, :key) %>
	</select>
</div>
<div class='ctrlHolder'>
	<label for="brecord_report_output_file">Output File :</label>
	<%= f.text_field :report_output_file, :maxlength => "80", :tabindex => "22" %>
</div>
<div class="buttonHolder">
	<label>&nbsp;</label>
	<button type="submit" class="ui-corner-all"><%=fam_img_tag('find')-%>Submit</button>
	<button type="reset" class="ui-corner-all"><%=fam_img_tag('delete')-%>Reset</button>
</div>

<div id="dialog_report_running" title="About PlmExplorer">
	<%= MSG['REPORT_RUNNING'] %><br/><br/>
	<a href="http://www.plmexplorer.com"><img src="/images/logo_button.gif" alt="PlmExplorer"></a>
</div>

<script type="text/javascript">

	$('#dialog_report_running').dialog({
		modal: true,
		autoOpen: false,
		bgiframe: true,
		overlay: {
			opacity: 0.5,
			background: '#1c94c4'
		}
	});

	var idname = '<%= controller.action_name %>';

	var formOptions = { 
	    target: 	'#cReport'
	,	url: 		'/reports/'+idname
	,	success: 	function() {
			$('#dialog_report_running').dialog('open');
		}
	};
	$('#'+idname).ajaxForm(formOptions);

</script>
