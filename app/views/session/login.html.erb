<div id="login_dialog" title="Login">
        <% form_tag :id => 'login_form', :class => 'uniForm' do %>
                <fieldset class='inlineLabels'>
                        <legend><img src="/images/logo_button.gif" alt="PlmExplorer"/></legend>
                        <div class='ctrlHolder'>
                                <label for="username" >Username</label>
                                <%= text_field_tag :username, params[:username], :html => {:id => 'username', :class => "textInput"} %>
                        </div>
                        <div class='ctrlHolder'>
                                <label for="password" >Password</label>
                                <%= password_field_tag :password, params[:password], :html => {:id => 'password', :class => "textInput"} %>
                        </div>
                        <%= submit_tag "Login", :class => "submit" %>
                </fieldset>
                <% if flash[:notice] -%>
                        <div id="notice"><%= flash[:notice] %></div>
                <% end -%>
        <% end %>
</div>

<script type="text/javascript">
	$(function() {
		$("#login_dialog").dialog({
			height: 250,
			width: 330,
			modal: true,
			overlay: {
				backgroundColor: '#1c94c4',
				opacity: 0.5
			},
			buttons: {
				OK: function() {
					var url = $('#login_form').attr("action") + "?username=" + $('#username').attr("value") + "&password=" + $('#password').attr("value");
					$.post(url);
					$(this).dialog('close');
				}
			}
		});
		$('#login_form').uniform();
	});
</script>
