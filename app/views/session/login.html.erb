<div id="login_dialog" title="Login">
	<% form_tag({:action => 'login'}, {:id => 'login_form', :class => 'uniForm', :method => 'POST'}) do %>
		<fieldset class='inlineLabels'>
			<legend><img src="/images/logo_button.gif" alt="PlmExplorer"/></legend>
			<div class='ctrlHolder'>
				<label for="username" >Username</label>
				<%= text_field_tag :username, params[:username], :html => {:id => 'username', :class => "textInput"} %>
			</div>
			<div class='ctrlHolder'>
				<label for="password" >Password</label>
				<%= password_field_tag :password, params[:password], :html => {:id => 'password', :class => "textInput"} %>
			</div>
			<% if flash[:notice] -%>
				<div id="notice" class="centered notice nomargin"><%= flash[:notice] %></div>
			<% end -%>
		</fieldset>
	<% end %>
</div>

<script type="text/javascript">
	$(function() {
		$('#login_dialog').dialog({
			height: 280,
			width: 350,
			modal: true,
			closeOnEscape: false,
			bgiframe: true,
			overlay: {
				backgroundColor: '#1c94c4',
				opacity: 0.5
			},
			buttons: {
				OK: function() {
					$('#login_form').submit();
					$(this).dialog('close');
				}
			}
		});
		$('#login_form').uniform();
		$('.ui-dialog-titlebar-close:first').hide();

		$('#login_dialog').bind('keydown', function(event) {
			if (event.keyCode == $.ui.keyCode.ENTER) {
				$('#login_form').submit();
				$(this).dialog('close');
			}
		});
	});
</script>
