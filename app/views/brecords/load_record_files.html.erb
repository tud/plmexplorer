<table id="filesGrid" class="scroll"></table>
<div id="filesPager" class="scroll"></div>

<script type="text/javascript">
$(function(){
	var id = "<%= @id %>";
	$('#filesGrid').jqGrid({
		url: '/brecords/grid_files',
		datatype: 'json',
		mtype: 'GET',
		colNames: ['id', 'Type', 'Name', 'Alias'],
		colModel :[
			{name:'id',			index:'id',		hidden:true},
			{name:'format_icon',index:'format_icon',	width:20},
			{name:'name',		index:'name',	width:80},
			{name:'balias',		index:'balias',	hidden: true}],
		rowNum: 20,
		rowList: [10,20,30,50,100],
		sortname: 'name',
		sortorder: 'asc',
		viewrecords: true,
		imgpath: grid_imgpath,
		height: 'auto',
		width: 300,
		pager: 'filesPager',
		ondblClickRow: function(rowid) {
			if (rowid!=null) {
				var rowValues = $('#filesGrid').getRowData(rowid);
				var file_url ="<%= url_for(:controller => 'brecords', :action => 'export') %>/<%= @id %>?balias="+rowValues.balias;
				window.open(file_url,"", "width=1,height=1,top=0,left=0,directories=no,location=no,resizable=no,menubar=no,toolbar=no,scrollbars=no,status=no");
				return false;
			}
		}
	})
	.navGrid('#filesPager', {refresh: false, edit: false, add: false, del: false, search: false})
});
</script>
