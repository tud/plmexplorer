<%= render :partial => 'brecords/load_record_parents_common' %>

<div id="parentsTree"></div>

<script type="text/javascript">
$(function(){
	$('#parentsTree').jstree({
		"plugins": ["themeroller", "json_data", "ui"],
		"json_data" : {
			"ajax" : {
				"url": 	"/<%= controller.controller_name %>/tree_parents?reftypes=<%=@reftypes%>",
				"data" : function (n) {
					return { id : n.attr ? n.attr("id") : 0 };
				}
			}
		}
	});
	
	$("#parentsTree").delegate("a", "dblclick", function() {
		var id = $(this).parent().attr("id");
		$.history(id);
		$('#cRecord').load("<%= url_for(:controller => 'brecords', :action => 'load_record_base') %>",{id:id});
		return false;
	});

});
</script>
